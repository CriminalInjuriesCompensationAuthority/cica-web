{% extends "page.njk" %}
{% from "components/task-list/macro.njk" import govukTaskList %}

{% block pageTitle %}Application Tasklist - {{ super() }}{% endblock %}

{% block innerContent %}
    <h1 class="govuk-heading-xl">Claim criminal injuries compensation</h1>
    <p class="govuk-body">You can <a href="/account/sign-in" class="govuj-link">create a GOV.UK One Login</a> to save your appliciation and return to it later.</p>

    {% if not data.taskListCompleted %}
        <h2 class="govuk-body govuk-!-margin-0">Application incomplete</h2>
        <p class="govuk-body govuk-!-margin-0 govuk-!-font-weight-bold">You've completed {{ data.sectionsCompletedCount }} of {{ data.sectionsTotalCount }} sections.</p>
        <p class="govuk-body"><a href="/task-list/next" class="govuk-link">Skip to first incomplete section</a></p>
    {% endif %}

    {% for section in data.sections %}
        <h2 id="govuk-task-list-section-heading-{{ section.idPrefix }}" class="govuk-heading-m govuk-task-list-section-heading">{{ section.title }}</h2>
        {{ govukTaskList({
            idPrefix: section.idPrefix,
            items: section.tasks,
            attributes: section.attributes
        }) }}
    {% endfor %}





























